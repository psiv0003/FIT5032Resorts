@model IEnumerable<EFolio_Take10.Models.Resort>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">


<link href="~/Content/Style.css" rel="stylesheet" />
<link href="~/Content/Resorts.css" rel="stylesheet" />

<h2>Resorts</h2>

@foreach (var item in Model)
{
    <div class="container">

        <div class="row">
            <div class="col">
                <div class="padding-20 card coordinates">
                    <div class=" card-image">
                        <img class="img-thumbnail" src="@Url.Content("~/Upload/"+ item.ImgURL)">
                    </div>
                    <span class="heading card-title description"> @Html.DisplayFor(modelItem => item.Name)</span>

                    <div class="card-content">
                        <p>
                            @Html.DisplayFor(modelItem => item.Address)
                        </p>
                    </div>

                    <div class="latitude no-display">
                        @Html.DisplayFor(modelItem => item.ResortLat)
                    </div>
                    <div class="longitude no-display">
                        @Html.DisplayFor(modelItem => item.ResortLong)
                    </div>

                    <div class="card-action">

                        <button type="button" class="btn custom-btn">View Details</button>
                    </div>
                </div>
            </div>
        </div>

